{
  "name": "@rxts/reuv",
  "version": "0.0.0",
  "type": "module",
  "description": "Sharable libraries between React and Vue",
  "repository": "git+https://github.com/rx-ts/reuv.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/@reuv/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "build": "run-s build:tsc build:r",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -b",
    "clean": "rimraf 'packages/**/{lib,*.tsbuildinfo}'",
    "codesandbox:install": "npx pnpm@7.5.1 i",
    "dev": "w -e docs --disableDotRule --publicPath /",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint . --cache",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "prerelease": "yarn build",
    "prevercel-build": "pnpm build",
    "release": "changeset publish",
    "start": "sirv dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "typecov": "type-coverage",
    "vercel-build": "w -e docs -p --publicPath /"
  },
  "devDependencies": {
    "@1stg/app-config": "^11.0.0",
    "@1stg/lib-config": "^13.0.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.23.2",
    "@pkgr/webpack": "^3.1.2",
    "@pkgr/webpack-mdx": "^2.0.3",
    "@reuv/core": "workspace:*",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web": "^0.0.213",
    "github-markdown-css": "^5.1.0",
    "jest": "^29.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.0",
    "reuv": "workspace:*",
    "sirv-cli": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "type-coverage": "^2.22.0",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "extends @1stg/browserslist-config/modern"
  ],
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@1stg",
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          ".github/*.yml"
        ],
        "rules": {
          "unicorn/filename-case": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "lib",
    "/pnpm-lock.yaml",
    "!/.github",
    "!/.*.cjs"
  ],
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "@reuv/(.*)": "<rootDir>/packages/@reuv/$1/src",
      "reuv": "<rootDir>/packages/reuv/src"
    }
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "github>1stG/configs"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
